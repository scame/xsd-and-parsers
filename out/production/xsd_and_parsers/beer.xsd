<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
           targetNamespace="http://scame.com/" xmlns:app="http://scame.com/">
    <xs:element name="beer">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="ingredients" form="unqualified">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element maxOccurs="unbounded" name="ingredient" form="unqualified" type="xs:NCName"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="characteristics" form="unqualified">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="bottling" form="unqualified">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element maxOccurs="unbounded" name="container" form="unqualified">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="material" form="unqualified" type="xs:NCName"/>
                                                    <xs:element name="capacity" form="unqualified" type="xs:decimal"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                        <xs:attribute name="alcPercentage" use="required" type="xs:decimal"/>
                        <xs:attribute name="caloroficValue" use="required" type="xs:integer"/>
                        <xs:attribute name="isFiltered" use="required" type="xs:boolean"/>
                        <xs:attribute name="transparency" use="required"/>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
            <xs:attribute name="id" use="required" type="xs:integer"/>
            <xs:attribute name="isAlcoholic" use="required" type="xs:boolean"/>
            <xs:attribute name="manufacturer" use="required" type="xs:NCName"/>
            <xs:attribute name="name" use="required" type="xs:NCName"/>
            <xs:attribute name="type" use="required" type="xs:NCName"/>
        </xs:complexType>
    </xs:element>
</xs:schema>
